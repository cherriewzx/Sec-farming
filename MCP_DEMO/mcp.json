{
    "name": "dir-scan-mcp",
    "version": "1.0.0",
    "description": "一个用于扫描Web目录敏感路径的MCP工具",
    "type": "service",
    "entrypoints": [
      {
        "name": "dir_scan",
        "method": "POST",
        "url": "http://localhost:9999/tool/dir_scan",
        "schema": {
          "type": "object",
          "properties": {
            "target": {"type": "string", "description": "目标URL"},
            "wordlist_path": {"type": "string", "description": "字典文件路径", "nullable": true},
            "timeout": {"type": "integer", "default": 8},
            "follow_redirects": {"type": "boolean", "default": true},
            "save_all": {"type": "boolean", "default": false},
            "user_agent": {"type": "string", "default": "DirScanMCP/1.0"}
          },
          "required": ["target"]
        }
      }
    ]
  }
  